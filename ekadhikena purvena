<body>
  <div class="container">
    <h1>Ekadhikena Purvena Calculator</h1>
    <p>Square numbers ending in 5 using ancient Vedic math logic.</p>
    <input type="number" id="numberInput" placeholder="Enter number ending in 5" />
    <br />
    <button onclick="calculateSquare()">Calculate</button>
    <div id="result"></div>
  </div>

  <script>
    function calculateSquare() {
      const n = parseInt(document.getElementById("numberInput").value);
      if (n % 10 !== 5) {
        document.getElementById("result").innerText =
          "❌ The number must end with 5.";
        return;
      }
      const prefix = Math.floor(n / 10);
      const square = prefix * (prefix + 1) * 100 + 25;
      document.getElementById("result").innerText = `✅ Result: ${square}`;
    }
  </script>
